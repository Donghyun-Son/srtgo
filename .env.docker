# Environment variables for Docker
# Copy this file to .env and update the values

# REQUIRED: Change this to a secure random string
SECRET_KEY=please-change-this-secret-key-in-production

# Application settings
APP_NAME=SRTgo Web
APP_VERSION=1.0.0
DEBUG=False

# Database (SQLite by default, change for PostgreSQL)
DATABASE_URL=sqlite+aiosqlite:///./data/srtgo.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/srtgo

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Telegram notifications (optional)
TELEGRAM_ENABLED=False
